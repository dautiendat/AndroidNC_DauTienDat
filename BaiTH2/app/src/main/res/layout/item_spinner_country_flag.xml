<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageCountryFlag"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/vietnam_flag"/>
    <TextView
        android:id="@+id/nameCountry"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Viá»‡t Nam"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toRightOf="@id/imageCountryFlag"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btnRemove"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Remove"
        app:layout_constraintHorizontal_bias="0.715"
        app:layout_constraintLeft_toRightOf="@id/nameCountry"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/nameCountry" />
</androidx.constraintlayout.widget.ConstraintLayout>